<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#563FFACE"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".InfoActivity">



    <ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#531C1C"
        android:textSize="25sp"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:text="First Come First Serve(FCFS)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Info_fcfs"
        android:textSize="20sp"
        android:padding="15dp"
        />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#531C1C"
            android:textSize="25sp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:text="Shortest Job First(SJF)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Info_sjf"
            android:textSize="20sp"
            android:padding="15dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#531C1C"
            android:textSize="25sp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:text="Priority Scheduling" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Info_priority"
            android:textSize="20sp"
            android:padding="15dp"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#531C1C"
            android:textSize="25sp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:text="Round Robin (RR)" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Info_RR"
            android:textSize="20sp"
            android:padding="15dp"
            />

    </LinearLayout>

</ScrollView>


</LinearLayout>